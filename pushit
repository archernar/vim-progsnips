#!/bin/bash
SCR=$(echo "$0" | gawk '{n=split($0, a, "/"); print a[n];}')
Tmp=/tmp/$$
Tmp1="/tmp/"$SCR"_"$$
Tmp2="/tmp/"$SCR"_"$$"_"$$
Tmp3="/tmp/"$SCR"_"$$"_"$$"_"$$
Tmp4="/tmp/"$SCR"_"$$"_"$$"_"$$"_"$$
trap 'exit 0' INT HUP QUIT TERM ALRM USR1
trap 'rm -f "$Tmp" "$Tmp1" "$Tmp2" "$Tmp3" "$Tmp4"' EXIT
rm -f "$Tmp"  >/dev/null 2>&1
rm -f "$Tmp1" >/dev/null 2>&1
rm -f "$Tmp2" >/dev/null 2>&1
rm -f "$Tmp3" >/dev/null 2>&1
rm -f "$Tmp4" >/dev/null 2>&1

REPO=vim-progsnips
ANON=`date`
echo $ANON

while getopts "g" arg
do
    case $arg in
        g) 
            ls plugin | sort | gawk '{printf("%-20s",$0);if(NR%4==0) print "";}' > plugin/PS2.txt
            git add updatevim
            git add pushit
            git add README.md
            ls plugin | gawk '{printf("git add plugin/%s\n",$0)}' | tee $Tmp
            chmod 777 $Tmp
            $Tmp
            rm -rf "$Tmp"

            git commit -m "Update"
            git push -u origin master

            rm -rf $HOME/.vim/bundle/$REPO
            vim  -c ":PluginInstall! $REPO" -c ":qa!"
            ls -l $HOME/.vim/bundle
            ls -l $HOME/.vim/bundle/$REPO
            # vim  -c ":PluginUpdate vim-session" -c ":qa!"
            # HERE=`pwd`
            # cd /home/mestes/.vim/bundle/$REPO
            # git pull
            # 
            # cd "$HERE"
            ;;
	*)  exit 0
            ;;
    esac
done
shift $(($OPTIND - 1))
